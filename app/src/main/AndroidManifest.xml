<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        tools:targetApi="31">

        <!-- Объявления Activity -->
        <activity android:name="com.example.cattleapp.activities.LoginActivity" />
        <activity android:name="com.example.cattleapp.activities.RegisterActivity" />
        <activity android:name="com.example.cattleapp.activities.VerificationActivity" />
        <activity android:name="com.example.cattleapp.activities.MainActivity" />
        <activity android:name="com.example.cattleapp.activities.AnimalDetailActivity" />
        <!-- Добавьте другие Activity, если необходимо -->

        <!-- Объявление BroadcastReceiver -->
        <receiver android:name="com.example.cattleapp.utils.FeedingAlarmReceiver" />

    </application>
</manifest>
